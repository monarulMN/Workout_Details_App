@model WorkoutLogger.Models.WorkoutSession
@{
    ViewData["Title"] = "Session Details";
}

<h1>Session Details</h1>

<p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>

<h5>Sets</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Exercise</th>
            <th>Reps</th>
            <th>Weight (kg)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var set in Model.Sets)
        {
            <tr>
                <td>@set.Exercise.Name</td>
                <td>@set.Reps</td>
                <td>@set.Weight</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back</a>

