@model WorkoutLogger.Models.Exercise

@{
    ViewData["Title"] = "Add Exercise";
}

<h1>Add New Exercise</h1>

<form asp-action="AddExercise" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save Exercise</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
