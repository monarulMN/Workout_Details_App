@model List<WorkoutLogger.Models.WorkoutSession>
<h1>Workout Sessions</h1>
<a asp-action="Create">Add New</a>
<table>
    <thead><tr><th>Date</th><th>Sets</th><th></th></tr></thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Date.ToShortDateString()</td>
                <td>@session.Sets.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@session.Id">Details</a> |
                    <form asp-action="Delete" asp-route-id="@session.Id" method="post" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
